{
  "manifest_version": 2,

  "name": "Noted",
  "version": "0.1.0",
  "description": "Scribble notes on web pages.",

  "permissions": [
    "storage",
    "tabs",
    "*://*/*"
  ],
  
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "pages/popup/popup.html",
    "default_title": "Noted"
  },
  
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file://*/*"
      ],
      "css": [
        "styles/noted-base.css"
      ],
      "js": [
        "scripts/contentBootstrap.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "scripts/page/controller.js",
    "scripts/page/paperscript/mainProject.js",
    "lib/paper-full.min.js",
    "lib/font-awesome-custom.css"
  ],
  
  "icons": {
    "128": "img/icon.png"
  },
  
  "options_page": "pages/options/options.html"
  
}
